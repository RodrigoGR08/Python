import datetime
from enum import Enum


class Conta:
    def __init__(self, nome, cpf):
        self.nome = nome
        self.cpf = cpf
        self.saldo = 0
        self.extrato = []

    def depositar(self, valor):
        self.saldo += valor
        print(f"Depósito feito com sucesso!")
        data_deposito = datetime.datetime.now().strftime("%d/%m/%Y %H:%M:%S")
        self.extrato.append(f"Deposito: {valor:,.2f}  {data_deposito}")


    def sacar(self, valor):
        if (self.saldo < valor):
            print("Você não tem saldo suficiente.")
        else:
            self.saldo -= valor
            print(f"Saque feito com sucesso, saldo atual de: R${self.saldo}")
            data_saque = datetime.datetime.now().strftime("%d/%m/%Y %H:%M:%S")
            self.extrato.append(f"Saque {valor:,.2f} {data_saque}")

    def consultaSaldo(self):
        print(f"Saldo de R$ {self.saldo:,.2f}")




class Extrato(Enum):
    Saque = 1
    Deposito =2
    

#eu faria dessa forma se liga


    
conta_do_rodrigo = Conta("Rodrigo", "15958489245")


conta_do_rodrigo.depositar(1500)
conta_do_rodrigo.depositar(1500)
conta_do_rodrigo.depositar(1500)
conta_do_rodrigo.depositar(1500)
conta_do_rodrigo.depositar(1500)
conta_do_rodrigo.depositar(1500)

conta_do_rodrigo.sacar(1200)
conta_do_rodrigo.sacar(800)
conta_do_rodrigo.sacar(1000)

conta_do_rodrigo.depositar(10)
conta_do_rodrigo.sacar(153)
conta_do_rodrigo.sacar(511)

for i in conta_do_rodrigo.extrato:
    print(i)


conta_do_rodrigo.consultaSaldo()
